@{
    Layout = "_LayoutDashboard";
}
@model Service

<div id="formContainer" class="form-container text-center mt-4">
    <form asp-action="Add" asp-controller="Service" method="post" class="row g-3" enctype="multipart/form-data">
        <h2>
            Service Form <div id="selectedService"></div>
        </h2>
        <div class="col-md-12">
            <label asp-for="Name">Service Name:</label>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="col-md-12">
            <label asp-for="Image">Service Image:</label>
            <input type="file" asp-for="Image" class="form-control" accept="image/*">
        </div>
        <div class="col-md-12">
            <label asp-for="description">Service Description:</label>
            <textarea asp-for="description" class="form-control"></textarea>
        </div>
        <div class="col-md-12">
            <button type="submit"
                    class="btn btn-primary">
                Next
            </button>
        </div>

    </form>
</div>        <!-- End Service Forms -->
