@{
    Layout = "_LayoutDashboard";
}

<div id="formContainer" class="form-container text-center mt-4">
    <form action="/Service/AddBanner" method="post" class="row g-3" enctype="multipart/form-data">
        
        <h2>
            Service Banner <div id="selectedService"></div>
        </h2>
        <input hidden type="text" value="@Model" name="serviceId" />
        <div class="col-md-12 mt-3">
            <label for="serviceImage">Banner:</label>
            <input type="file" id="serviceImage" name="bannerImage" class="form-control" accept="image/*">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-md-12 d-flex justify-content-between align-items-center mb-3">

            <div class="pt-5 w-100 d-flex justify-content-end">
                <h6 class="mb-0"><a href="/dashboard/index" class="text-body">Skip & Submit<i class="fa-solid fa-arrow-right"></i></a></h6>
            </div>
        </div>


    </form>
</div>